<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Scholar.ActivityScholarMessage">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/scholarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/scholarToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="@dimen/head_line_text" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scholarEmptyText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No message"
                android:textSize="@dimen/normal_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scholarRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/inner_pad"
                android:layout_marginTop="@dimen/inner_pad"
                android:layout_marginEnd="@dimen/inner_pad"
                android:layout_marginBottom="@dimen/inner_pad" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/inner_pad"
                android:weightSum="7">

                <EditText
                    android:id="@+id/scholarEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_style"
                    android:ems="10"
                    android:hint="Write here..."
                    android:inputType="textMultiLine"
                    android:minHeight="48sp"
                    android:paddingLeft="@dimen/message_pad" />

                <ImageView
                    android:id="@+id/scholarSubmitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    app:srcCompat="@drawable/ic_message_send" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>